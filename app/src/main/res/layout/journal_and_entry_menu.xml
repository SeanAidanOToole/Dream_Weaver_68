<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:gravity="center"
    android:padding="50dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="305dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="35dp"
        android:text="Journal/Entry Menu"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="55dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_marginTop="60dp"
            android:src="@mipmap/search_icon_glyph_foreground"
            android:alpha=".85"/>

        <ImageButton
            android:id="@+id/journalSearch_button"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="50dp"
            android:background="null"
            android:src="@drawable/rounded_button"/>

        <TextView
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="Journal Search"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="95dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:layout_marginTop="50dp"
            android:src="@drawable/selection_triangle_leftside"
            android:alpha=".85"/>

        <ImageButton
            android:id="@+id/journalCreate_button"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="50dp"
            android:background="null"
            android:src="@drawable/rounded_button"/>

        <TextView
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="22dp"
            android:text="Create New Journal"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="177dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:layout_marginTop="50dp"
            android:src="@drawable/selection_triangle_leftside"
            android:alpha=".85"/>

        <ImageButton
            android:id="@+id/journalView_button"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="50dp"
            android:background="null"
            android:src="@drawable/rounded_button"/>

        <TextView
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="22dp"
            android:text="View Journals"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="220dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:layout_marginTop="50dp"
            android:src="@drawable/selection_triangle_leftside"
            android:alpha=".85"/>

        <ImageButton
            android:id="@+id/entryView_button"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="50dp"
            android:background="null"
            android:src="@drawable/rounded_button"/>

        <TextView
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="22dp"
            android:text="View Entries"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="136dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:layout_marginTop="50dp"
            android:src="@drawable/selection_triangle_leftside"
            android:alpha=".85"/>

        <ImageButton
            android:id="@+id/entryCreate_button"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="50dp"
            android:background="null"
            android:src="@drawable/rounded_button"/>

        <TextView
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="22dp"
            android:text="Create New Entry"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="140dp"
        android:layout_height="85dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/home_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="null"
                android:src="@drawable/rounded_button"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/home_icon_glyph_foreground" />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="140dp"
        android:layout_height="85dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="null"
                android:src="@drawable/rounded_button"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/back_arrow_foreground" />
        </LinearLayout>

    </FrameLayout>

</FrameLayout>